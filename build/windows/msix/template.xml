<?xml version="1.0" encoding="utf-8"?>
<MsixPackagingToolTemplate
    xmlns="http://schemas.microsoft.com/msix/packaging/msixpackagingtool/template/2022">
    <Settings
        AllowTelemetry="false"
        ApplyACLsToPackageFiles="true"
        GenerateCommandLineFile="true"
        AllowPromptForPassword="false">
    </Settings>
    <Installer
        Path="AutoClicker.exe"
        Arguments=""
        InstallLocation="C:\Program Files\yulesxoxo\AutoClicker">
    </Installer>
    <PackageInformation
        PackageName="AutoClicker"
        PackageDisplayName="AutoClicker"
        PublisherName="CN=yulesxoxo"
        PublisherDisplayName="yulesxoxo"
        Version="0.1.0.0"
        PackageDescription="It's an Auto Clicker">
        <Capabilities>
            <Capability Name="runFullTrust" />

        </Capabilities>
        <Applications>
            <Application
                Id="com.yulesxoxo.autoclicker"
                Description="It's an Auto Clicker"
                DisplayName="AutoClicker"
                ExecutableName="AutoClicker.exe"
                EntryPoint="Windows.FullTrustApplication">

            </Application>
        </Applications>
        <Resources>
            <Resource Language="en-us" />
        </Resources>
        <Dependencies>
            <TargetDeviceFamily Name="Windows.Desktop" MinVersion="10.0.17763.0" MaxVersionTested="10.0.19041.0" />
        </Dependencies>
        <Properties>
            <Framework>false</Framework>
            <DisplayName>AutoClicker</DisplayName>
            <PublisherDisplayName>yulesxoxo</PublisherDisplayName>
            <Description>It's an Auto Clicker</Description>
            <Logo>Assets\AppIcon.png</Logo>
        </Properties>
    </PackageInformation>
    <SaveLocation PackagePath="AutoClicker.msix" />
    <PackageIntegrity>
        <CertificatePath></CertificatePath>
    </PackageIntegrity>
</MsixPackagingToolTemplate>
